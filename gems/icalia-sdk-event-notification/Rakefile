$LOAD_PATH.unshift File.expand_path('./lib', __dir__)

require 'rspec/core/rake_task'
require 'icalia-sdk-event-notification/version'

RSpec::Core::RakeTask.new(:spec)

task default: :spec

desc "Build icalia-sdk-event-notification-#{Icalia::Event::NOTIFICATION_VERSION}.gem"
task :build do
  system 'gem build icalia-sdk-event-notification.gemspec'
end

desc "Build and push icalia-sdk-event-notification-#{Icalia::Event::NOTIFICATION_VERSION}.gem"
task release: :build do
  system "gem push icalia-sdk-event-notification-#{Icalia::Event::NOTIFICATION_VERSION}.gem"
end
